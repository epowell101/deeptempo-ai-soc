{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://deeptempo.ai/schemas/attack-layer.schema.json",
  "title": "ATT&CK Navigator Layer",
  "description": "MITRE ATT&CK Navigator layer format for visualization",
  "type": "object",
  "required": ["name", "versions", "domain", "techniques"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Layer name"
    },
    "versions": {
      "type": "object",
      "description": "Version information",
      "properties": {
        "attack": {
          "type": "string",
          "description": "ATT&CK version"
        },
        "navigator": {
          "type": "string",
          "description": "Navigator version"
        },
        "layer": {
          "type": "string",
          "description": "Layer format version"
        }
      }
    },
    "domain": {
      "type": "string",
      "enum": ["enterprise-attack", "mobile-attack", "ics-attack"],
      "description": "ATT&CK domain"
    },
    "description": {
      "type": "string",
      "description": "Layer description"
    },
    "filters": {
      "type": "object",
      "description": "Display filters",
      "properties": {
        "platforms": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "sorting": {
      "type": "integer",
      "description": "Sort order (0-3)"
    },
    "layout": {
      "type": "object",
      "description": "Layout configuration",
      "properties": {
        "layout": {
          "type": "string",
          "enum": ["side", "flat", "mini"]
        },
        "showID": {
          "type": "boolean"
        },
        "showName": {
          "type": "boolean"
        },
        "showAggregateScores": {
          "type": "boolean"
        },
        "countUnscored": {
          "type": "boolean"
        },
        "aggregateFunction": {
          "type": "string",
          "enum": ["average", "min", "max", "sum"]
        }
      }
    },
    "hideDisabled": {
      "type": "boolean",
      "description": "Hide disabled techniques"
    },
    "techniques": {
      "type": "array",
      "description": "Technique annotations",
      "items": {
        "type": "object",
        "required": ["techniqueID"],
        "properties": {
          "techniqueID": {
            "type": "string",
            "description": "MITRE ATT&CK technique ID",
            "pattern": "^T[0-9]{4}(\\.[0-9]{3})?$"
          },
          "tactic": {
            "type": "string",
            "description": "Associated tactic"
          },
          "score": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Technique score for gradient coloring"
          },
          "color": {
            "type": "string",
            "description": "Override color (hex format)"
          },
          "comment": {
            "type": "string",
            "description": "Technique comment"
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether technique is enabled"
          },
          "metadata": {
            "type": "array",
            "description": "Additional metadata",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                }
              }
            }
          },
          "links": {
            "type": "array",
            "description": "External links",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          },
          "showSubtechniques": {
            "type": "boolean",
            "description": "Show sub-techniques"
          }
        }
      }
    },
    "gradient": {
      "type": "object",
      "description": "Color gradient configuration",
      "properties": {
        "colors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Gradient colors (hex format)"
        },
        "minValue": {
          "type": "integer",
          "description": "Minimum score value"
        },
        "maxValue": {
          "type": "integer",
          "description": "Maximum score value"
        }
      }
    },
    "legendItems": {
      "type": "array",
      "description": "Legend items",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "color": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "array",
      "description": "Layer metadata",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "links": {
      "type": "array",
      "description": "Layer-level links"
    },
    "showTacticRowBackground": {
      "type": "boolean"
    },
    "tacticRowBackground": {
      "type": "string"
    },
    "selectTechniquesAcrossTactics": {
      "type": "boolean"
    },
    "selectSubtechniquesWithParent": {
      "type": "boolean"
    },
    "selectVisibleTechniques": {
      "type": "boolean"
    }
  }
}
